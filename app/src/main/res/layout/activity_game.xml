<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:id="@+id/game_relative_layout"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.guillaume.test.memory.GameActivity">

    <GridView
        android:id="@+id/game_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="80dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="8dp"
        android:horizontalSpacing="8dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/game_chronometer"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:textColor="#FFF"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/game_text_high_score"
        android:padding="8dp"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:text="Pas de meilleur score"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:background="@color/colorPrimary">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/game_button_pause"
            android:background="@drawable/ic_pause_white_24dp"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/game_grey_screen"
        android:visibility="gone"
        android:alpha="0.95"
        android:background="#F0F0F0">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:alpha="1"
            android:padding="8dp"
            android:layout_centerInParent="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/game_button_resume"
                android:background="@drawable/ic_play_arrow_white_48dp"/>
        </RelativeLayout>

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/game_win_screen"
        android:visibility="gone"
        android:background="#F0F0F0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/game_text_win"
                android:padding="8dp"
                android:background="@color/colorPrimary"
                android:alpha="12"
                android:textColor="#FFF"
                android:layout_gravity="center_horizontal"
                android:text="GagnÃ© !"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/game_text_win_score"
                android:padding="8dp"
                android:background="@color/colorPrimary"
                android:alpha="12"
                android:textColor="#FFF"
                android:layout_gravity="center_horizontal"
                android:text="HighScore?"
                android:layout_marginTop="24dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/game_button_win"
                android:text="Nouvelle Partie"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
