<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:background="@drawable/rect_recap_score_text">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recap_frame_time_title"
            android:textStyle="bold"
            android:text="TIME"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recap_frame_time"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recap_frame_best_time_title"
            android:layout_marginTop="16dp"
            android:text="BEST TIME"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recap_frame_best_time"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"/>

        <com.example.guillaume.test.memory.UIParts.MenuButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recap_frame_new_game_button"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="16dp">

        </com.example.guillaume.test.memory.UIParts.MenuButton>
    </LinearLayout>

</RelativeLayout>